<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        

    </style>

    <style name="healthToolBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@color/colorTitleText</item>
        <item name="android:tabWidgetStyle">@style/tabStyle</item>
    </style>


    <style name="tabStyle" parent="Widget.Design.TabLayout">
        <item name="android:textAppearanceButton">@style/textAppearanceTab</item>
        <item name="colorAccent">@color/colorTabStrip</item>
    </style>

    <style name="textAppearanceTab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorTitleText</item>
    </style>




</resources>
