<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.calculator.CalcExFisicoFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imb_relative_layout">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:id="@+id/imb_linear_layout">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/imb_peso"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:inputType="numberDecimal"
                    android:hint="@string/peso_name"

                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:animateLayoutChanges="true">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/imb_altura"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:inputType="numberDecimal"
                    android:hint="@string/altura_name"
                    />
            </android.support.design.widget.TextInputLayout>



        </LinearLayout>
        <TextView
            android:id="@+id/imb_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="72sp"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/imb_linear_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"/>



    </RelativeLayout>

</FrameLayout>
