<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.bugdroidbuilder.paulo.droidhealth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".view.SettingsActivity"
            android:label="Configurações"
            android:theme="@style/AppTheme" />

        <activity android:name=".view.advices.SlepnessAdvicesActivity" />

        <activity android:name=".view.advices.EatingAdvicesActivity" />
        <activity android:name=".view.InformationActivity" />

        <activity android:name=".view.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>